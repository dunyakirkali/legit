<!DOCTYPE html>
<html>
  <head>
    <title>Le-git</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="row">
      <nav>
        <div class="nav-wrapper">
          <a href="#" class="brand-logo">Le-git</a>
          <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li>
              <%= link_to "iOS", root_path(platform: 'ios') %>
            <li>
              <%= link_to "Android", root_path(platform: 'android') %>
            </li>
          </ul>
        </div>
      </nav>
    </div>
    <%= yield %>
  </body>
</html>
